- content_for :scripts do
  %script{ type: 'javascript', src: '/static/js/index.js' }

#levels
  - @levels.each_with_index do |l, i|
    %div.level(id="level-#{i}")
      %span.title= l['title']

      - if i == @current_level
        %div.intro= l['intro']
        %div.instructions= l['instructions']
        %form#work
          %fieldset
            %label(for="match") Match
            %input#match(type="text" name="match")
            %label(for="repl" style="#{ l['type'] != 'sub' ? 'display:none' : '' }" ) Replacement
            %input#repl(type="text" name="repl" style="#{ l['type'] != 'sub' ? 'display:none' : '' }" )
            %label(for="mods") Mods
            %input#mods(type="text" name="mods")
          %button#try Try

